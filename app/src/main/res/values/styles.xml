<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/aladin</item>
    </style>
    <style name="Theme.MyApp.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/logo</item>
        <item name="android:fontFamily">@font/aladin</item>
        <!-- Use a drawable or color for the background -->
    </style>




    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/aladin</item>
        <!-- Custom style for toolbar title -->
            <item name="android:textSize">24sp</item> <!-- Change the size here -->
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:subtitleTextColor">@color/black</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <!-- نمط لتخصيص النصوص في NavigationView -->
            <item name="android:textSize">16sp</item>
            <item name="android:textColor">#FFFFFF</item> <!-- اللون الأبيض للنص -->
        <item name="android:fontFamily">@font/aladin</item>
    </style>

  </resources>
