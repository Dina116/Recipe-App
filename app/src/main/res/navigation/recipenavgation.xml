<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipenavgation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.training.recipeapp.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favFragment"
            app:destination="@id/favFragment" />
        <action
            android:id="@+id/action_homeFragment_to_creatorFragment"
            app:destination="@id/creatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.training.recipeapp.fragments.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_creatorFragment"
            app:destination="@id/creatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/favFragment"
        android:name="com.training.recipeapp.fragments.FavFragment"
        android:label="fragment_fav"
        tools:layout="@layout/fragment_fav" >
        <action
            android:id="@+id/action_favFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_favFragment_to_creatorFragment"
            app:destination="@id/creatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/creatorFragment"
        android:name="com.training.recipeapp.fragments.CreatorFragment"
        android:label="fragment_creator"
        tools:layout="@layout/fragment_creator" />
</navigation>